<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:padding="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp">
            <ImageView
                android:id="@+id/img_team"
                android:layout_width="150dp"
                android:layout_height="150dp"/>
                />
            <TextView
                android:id="@+id/tv_nama_team"
                android:layout_marginBottom="5dp"
                android:text="Nama Team"
                android:textStyle="bold"
                android:textColor="@color/strong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_toRightOf="@+id/img_team"
                />
            <TextView
                android:id="@+id/tv_nama_pelatih"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pelatih"
                android:padding="5dp"
                android:layout_below="@+id/tv_nama_team"
                android:layout_toRightOf="@id/img_team"/>
            <TextView
                android:id="@+id/tv_nama_stadion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Stadion"
                android:padding="5dp"
                android:layout_below="@+id/tv_nama_pelatih"
                android:layout_toRightOf="@id/img_team"/>


            //TextView
                android:id="@+id/tv_deskripsi_team"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi Team :"
                android:padding="5dp"
                android:layout_below="@+id/img_team"/>




        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>